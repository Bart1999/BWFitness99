<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OverallNutritionActivity"
    android:background="@drawable/background">

    <Button
        android:id="@+id/view_cut"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#0000FF"
        android:text="View Full Cutting Advice"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/cuttxt2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.083" />

    <Button
        android:id="@+id/view_maintain"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="14dp"
        android:backgroundTint="#0000FF"
        android:text="View Full Maintaining Advice"
        android:textAllCaps="false"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/maintaintxt2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442" />

    <Button
        android:id="@+id/view_bulk"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="#0000FF"
        android:text="View Full Bulking Advice"
        android:textAllCaps="false"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bulktxt2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.795" />

    <TextView
        android:id="@+id/cuttxt2"
        android:layout_width="280dp"
        android:layout_height="150dp"
        android:background="@color/black"
        android:text="Get into a calorie deficit starting off in a 200/300 deficit in comparison to your maintenance calories.
In order to lose some fat and get into a healthier body fat percentage"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/maintaintxt2"
        android:layout_width="280dp"
        android:layout_height="170dp"
        android:background="@color/black"
        android:text="You are at a healthy weight and body fat percentage so now it is up to you if you want keep maintaining or to cut or bulk.
Before committing to a cut or bulk think through why and also the consequences"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.427" />

    <TextView
        android:id="@+id/bulktxt2"
        android:layout_width="280dp"
        android:layout_height="185dp"
        android:layout_marginStart="4dp"
        android:background="@color/black"
        android:text="You are underweight and it is recommended for you to bulk in order to gain some weight.
Start in a 200/300 calorie surplus in comparison to your maintenance calories.Your bulk can be more aggressive is you're severly underweight"
        android:textColor="@color/white"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.847" />

</androidx.constraintlayout.widget.ConstraintLayout>