<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IntermediateActivity"
    android:background="@drawable/gym">

    <TextView
        android:id="@+id/intermediatetxt"
        android:layout_width="409dp"
        android:layout_height="430dp"
        android:background="@color/black"
        android:text="You're now an Intermediate trainer you have built a solid base of muscle and training will get a bit more challenging now in terms of progressing to advanced. You are recommended to train 4/5 times a week in order to reach adequate volume for all muscle groups to progress but also still have sufficient rest to allow your muscles to grow and recover. Still focus on form but now you can start focusing more on strength especially on compound movements. You may experience your first plateau at this stage which maans you get stuck and you don't progress and this is when you will need to vary weight and rep ranges to shock your muscles.
At this level it's recommended you do a 4 day Upper Lower Upper Lower split or Push Pull Legs Upper Lower 5 day split."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/view_workout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#0000FF"
        android:text="View Current Workout Plan"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_session3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/new_session3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="84dp"
        android:backgroundTint="#0000FF"
        android:text="Create New Workout Plan"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/overall3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0000FF"
        android:text="View Workout Advice for All Levels"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>