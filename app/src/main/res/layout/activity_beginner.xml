<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeginnerActivity"
    android:background="@drawable/gym">

    <Button
        android:id="@+id/view_workout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="#0000FF"
        android:text="View Current Workout Plan"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/new_session"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/new_session"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="96dp"
        android:backgroundTint="#0000FF"
        android:text="Create New Workout Plan"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/overall"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#0000FF"
        android:text="View Workout Advice for All Levels"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/beginnertxt"
        android:layout_width="409dp"
        android:layout_height="380dp"
        android:background="@color/black"
        android:text="The most important thing for beginners is to execute
all exercises with correct form to prevent risk of injury and also to effectively build muscle mass.
So as a beginner focus on exercise execution and training frequency 3/4 days will be the sweet spot.
Focus mainly on the compound lifts like the bench,squat and deadlift as they will increase your strength quicker and more effectively than isolation movements,
but also make sure to also include isolation exercises in your routine on top of the compound lifts too.
With these guidelines your strength will quickly improve and you will move up to a Novice then an intermediate pretty quickly.
Stay consistent be patient and enjoy your training."
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/view_workout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>